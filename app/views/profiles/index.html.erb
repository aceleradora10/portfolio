<div class="cabecalho">
<div class="avatar">
  <%= image_tag @profile.avatar.url(:medium) unless @profile.nil? %>
</div>
  <h1 class="nome"><%= @profile.try(:name) %></h2>

  <p class="nome">
    Olá, meu nome é <b><%=@profile.try(:name) %></b> e sou freelancer em Ruby on Rails.
  </p>

<div class="quadros">
  <p>
    <h3>Biografia</h3>
    <p><%= @profile.try(:bio) %></p>
  </p>
</div>
<div class="quadros">
<p>
  <h3>Skills</h3>
  <p>
    <ul>
      <% if @profile and @profile.skills %>
        <% @profile.skills.each do |skill| %>
        <li class="skill"><%= skill.name %></li>
        <% end %>
      <% end %>
    </ul>
  </p>
</p>
</div>
</div>


<p>
  <h3>Jobs</h3>
  <p>
    <div class="ui three column grid">
    <% if @profile and @profile.jobs %>
      <% @profile.jobs.each do |job| %>
      <div class="column">
        <ul>
          <li><%= image_tag job.img_job.url(:thumb) %></li>
          <li><%= job.title %></li>
        </ul>
      </div>
      <% end %>
    <% end %>
  </p>
  <!-- <%= link_to "New Job", controller: "jobs", action: "new", id: @profile %> -->
</div>
</p>
